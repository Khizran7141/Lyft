{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./types"],
    "baseUrl": "./",
    "paths": {
      "*": ["types/*"]
    },
  },
  "include": ["./src/**/*.ts", "./types/**/*.ts"],
  "exclude": ["node_modules"]
}
